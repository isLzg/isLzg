---
import Layout from "../../layouts/Layout.astro"
import Link from "../../components/Link"
---

<Layout title="About" activeTab="About">
  <div class="content">
    <h1>关于我</h1>
    <dir class="link-container">
      <Link path="./about/history" title="历史" />
      <Link path="./about/now" title="现状" />
      <Link path="./about/resume" title="简历" />
    </dir>
  </div>
</Layout>
<style>
  .content {
    display: flex;
    align-items: center;
  }
  .link-container {
    display: flex;
    gap: 12px;
  }
</style>
